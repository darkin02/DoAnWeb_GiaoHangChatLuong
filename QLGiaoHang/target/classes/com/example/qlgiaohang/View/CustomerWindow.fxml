<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="525.0" prefWidth="750.0" stylesheets="@../Css/CustomerStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qlgiaohang.CustomerModel">
   <children>
      <ScrollPane layoutX="14.0" layoutY="140.0" prefHeight="371.0" prefWidth="724.0">
        <content>
          <AnchorPane prefHeight="378.0" prefWidth="490.0">
               <children>
                  <HBox fx:id="paneKhachHang" fillHeight="false" layoutY="4.0" spacing="15.0">
                     <padding>
                        <Insets left="15.0" right="15.0" top="5.0" />
                     </padding></HBox>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <VBox layoutX="14.0" layoutY="7.0" prefHeight="108.0" prefWidth="724.0">
         <children>
            <HBox prefHeight="46.0" prefWidth="527.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="36.0" fitWidth="36.0">
                     <image>
                        <Image url="@../icon/nameTag.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" top="7.0" />
                     </HBox.margin>
                  </ImageView>
                  <TextField fx:id="txtF_HoTen" prefHeight="28.0" prefWidth="170.0" promptText="Họ tên" styleClass="text-field-layout">
                     <HBox.margin>
                        <Insets left="5.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <ImageView fitHeight="36.0" fitWidth="36.0">
                     <image>
                        <Image url="@../icon/phone-book.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="15.0" top="3.0" />
                     </HBox.margin>
                  </ImageView>
                  <TextField fx:id="txtF_SoDienThoai" prefHeight="28.0" prefWidth="170.0" promptText="Số điện thoại" styleClass="text-field-layout">
                     <HBox.margin>
                        <Insets left="5.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField prefHeight="28.0" prefWidth="170.0" promptText="Tìm kiếm" styleClass="text-field-layout">
                     <HBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <HBox maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#TimKiem" prefWidth="22.0" styleClass="btnTimkiem">
                     <children>
                        <ImageView fitHeight="22.0" fitWidth="22.0">
                           <image>
                              <Image url="@../icon/search_26px.png" />
                           </image>
                           <HBox.margin>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                     <HBox.margin>
                        <Insets top="11.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
            <HBox prefHeight="28.0" prefWidth="482.0">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="36.0">
                     <image>
                        <Image url="@../icon/gender.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="6.0" top="8.0" />
                     </HBox.margin>
                  </ImageView>
                  <RadioButton fx:id="rdB_Nam" mnemonicParsing="false" selected="true" text="Nam">
                     <toggleGroup>
                        <ToggleGroup fx:id="rdB_GioiTinh" />
                     </toggleGroup>
                     <HBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rdB_Nu" mnemonicParsing="false" selected="true" text="Nữ" >
                     <HBox.margin>
                        <Insets left="60.0" top="20.0" />
                     </HBox.margin>
                  </RadioButton>
                  <ImageView fitHeight="36.0" fitWidth="36.0">
                     <image>
                        <Image url="@../icon/address.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="22.0" top="8.0" />
                     </HBox.margin>
                  </ImageView>
                  <TextArea fx:id="txtF_DiaChi" prefHeight="39.0" prefWidth="170.0" promptText="Địa chỉ" styleClass="content" wrapText="true">
                     <HBox.margin>
                        <Insets left="6.0" top="5.0" />
                     </HBox.margin>
                  </TextArea>
                  <Button onMouseClicked="#btn_ThemKhachHang" fx:id="btn_Them" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Thêm">
                     <HBox.margin>
                        <Insets left="20.0" top="14.0" />
                     </HBox.margin>
                  </Button>
                  <Button onMouseClicked="#btn_SuaKhachHang" fx:id="btn_Sua" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Sửa">
                     <HBox.margin>
                        <Insets left="15.0" top="14.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btn_Huy" mnemonicParsing="false" onMouseClicked="#setBtn_Huy" prefHeight="26.0" prefWidth="70.0" text="Hủy">
                     <HBox.margin>
                        <Insets left="15.0" top="14.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
